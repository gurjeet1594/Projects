public class MidValue {
	public static void main(String[]args) {
		
		nMid("Hello", 3);
	}
	public static void nMid(String input, int a) {


		StringBuffer word = new StringBuffer(input);
		
		int len = input.length();
		
		int count;
		int mid;
		if (a>1) {
		 mid = len/3;
		}else {
			mid = len/2;
		}
		for (int i = 0; i <a;i++) {
			
			
			word.deleteCharAt(mid);	
		}	
		System.out.println(word);
	}
	}
